{
  "routes": [
    {
      "src": "/([^/]+)/?$",
      "dest": "/$1.html"
    },
    {
      "src": "/(.+)",
      "dest": "/$1.html"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/.*",
      "status": 404,
      "dest": "/404.html"
    }
  ],
    "rewrites": [
      {
        "source": "/(.*)",
        "destination": "/$1"
      }
    ],
    "headers": [
      {
        "source": "/(.*)\\.svg",
        "headers": [
          {
            "key": "Content-Type",
            "value": "image/svg+xml"
          }
        ]
      }
    ]
  }